{
  "name": "uni-riot",
  "version": "1.0.0",
  "description": "Universial Javascript with riotjs",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel start-server start-web-dev",
    "start-server": "nodemon --inspect index.js",
    "start-web-dev": "webpack-dev-server --inline --hot --host 0.0.0.0",
    "test": "mocha test/**/*.js --compilers js:babel-core/register",
    "test-watch": "mocha -w test/**/*.js --compilers js:babel-core/register",
    "webpack": "webpack"
  },
  "keywords": [
    "universal",
    "javascript",
    "riot",
    "riotjs"
  ],
  "author": "Andy Tang <andyt@live.nl>",
  "license": "ISC",
  "dependencies": {
    "auto-loader": "^0.2.0",
