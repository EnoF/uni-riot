    "materialize-css": "^0.97.8",
    "mocha": "^3.1.0",
    "nodemon": "^1.9.2",
    "node-sass": "^3.11.2",
    "npm-run-all": "^2.2.0",
    "parallelshell": "^2.0.0",
    "riotjs-loader": "^3.0.0",
    "style-loader": "^0.13.1",
    "sass-loader": "^4.0.1",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
